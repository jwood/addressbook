<% if flash.now[:notice] %>
  <div class="errorExplanation" id="errorExplanation"><h2>1 error prohibited this password file from being saved</h2><p><%= flash.now[:notice] %></p></div>
<% end %>

<%= form_tag({ :action => :password_file }, { :remote => true, :class => 'ajax_request' }) do %>
  <h3>Password File</h3>
  <p>
    If a password file (<%= link_to 'htpasswd format', 'http://httpd.apache.org/docs/2.0/programs/htpasswd.html', :target => 'new' %>) 
    is specified, it will be used to for HTTP Basic Authentication.
  </p>
  <div class="section">
    <label>Password file location:</label>
    <%= text_field_tag 'password_file', password_file, :size => 40 %>
  </div>

  <p><%= submit_tag 'Save' %></p>  
<% end %>

<p>
  <%= link_to('Cancel', url_for(:action => :password_file), :method => :get, :remote => true, :class => 'ajax_request') %>
</p>
